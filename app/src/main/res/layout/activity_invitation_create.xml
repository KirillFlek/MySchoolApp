<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.InvitationCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_code"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/purple"
            android:padding="5dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_uses"
                android:padding="10dp"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/numOfUses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/simple_uses"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_class"
                android:padding="10dp"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/classroomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/simple_class"
                android:singleLine="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/classroom_teacher"
                android:padding="10dp"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/teatcherFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/student"
                />

            <RadioButton
                android:id="@+id/headman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/elder"
                />

            <RadioButton
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/teacher"
                />

            <RadioButton
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/admin"
                android:layout_gravity="center"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/chechCreatedCodes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/view_invitations"
            android:gravity="center|bottom"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/createInvitationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:text="@string/create_invitations"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>